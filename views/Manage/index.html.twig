{% extends 'base.html.twig' %}

{% block title 'Dashboard' %}

{% block alt_title '' %}

{% block content %}
<div class="row">
    <div class="col-lg-3 col-xs-6">
        <a href="{{ path('manage_packages') }}">
            <div class="small-box bg-olive">
                <div class="inner">
                    <h3>
                        {{ packages|number_format }}
                    </h3>
                    <p>
                        Package{% if packages != 1 %}s{% endif %}
                    </p>
                </div>
                <div class="icon">
                    <i class="fa fa-bookmark"></i>
                </div>
                <span class="small-box-footer">
                    More info <i class="fa fa-arrow-circle-right"></i>
                </span>
            </div>
        </a>
    </div>
    <div class="col-lg-3 col-xs-6">
        <a href="{{ path('manage_remotes') }}">
            <div class="small-box bg-orange">
                <div class="inner">
                    <h3>
                        {{ remotes|number_format }}
                    </h3>
                    <p>
                        Remote{% if remotes != 1 %}s{% endif %}
                    </p>
                </div>
                <div class="icon">
                    <i class="fa fa-share-alt"></i>
                </div>
                <span class="small-box-footer">
                    More info <i class="fa fa-arrow-circle-right"></i>
                </span>
            </div>
        </a>
    </div>
    {% for controller in plugin_controllers(constant('Terramar\\Packages\\Plugin\\Actions::DASHBOARD_INDEX')) %}
    <div class="col-lg-3 col-xs-6">
    {{ render(controller) }}
    </div>
    {% endfor %}
</div>
{% endblock %}
